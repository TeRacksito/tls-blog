generator client {
  provider   = "prisma-client"
  output     = "../app/generated/prisma"
  engineType = ""
}

datasource db {
  provider = "postgresql"
}

model ConnectionTestTitle {
  id          Int    @id @default(autoincrement())
  title       String
  description String
}

enum ProjectStatus {
  PLANNING
  BUILDING
  COMPLETED
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([email])
}

model Project {
  id          Int           @id @default(autoincrement())
  title       String
  description String?
  status      ProjectStatus @default(PLANNING)
  x           Float?
  y           Float?
  z           Float?
  coverImage  String?
  tags        String[]
  ownerId     Int
  owner       User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([ownerId])
  @@index([status])
  @@index([createdAt])
}
