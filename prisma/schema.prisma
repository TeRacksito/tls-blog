generator client {
  provider   = "prisma-client"
  output     = "../app/generated/prisma"
  engineType = ""
}

datasource db {
  provider = "postgresql"
}

model ConnectionTestTitle {
  id          Int    @id @default(autoincrement())
  title       String
  description String
}

enum ProjectStatus {
  PLANNING
  BUILDING
  COMPLETED
}

model Project {
  id            Int           @id @default(autoincrement())
  title         String
  description   String?
  status        ProjectStatus @default(PLANNING)
  worldname     String?
  mapname       String?
  x             Float?
  y             Float?
  z             Float?
  zoom          Int?
  coverImage    String?
  tags          String[]
  ownerUsername String        @db.VarChar(255)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  milestones    Milestone[]

  @@index([ownerUsername, status, createdAt, worldname])
}

model Milestone {
  id          Int                 @id @default(autoincrement())
  projectId   Int
  project     Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title       String
  description String?
  order       Int                 @default(0)
  isCompleted Boolean             @default(false)
  completedAt DateTime?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  resources   MilestoneResource[]

  @@index([projectId, order])
}

model ResourceItem {
  id           Int                 @id @default(autoincrement())
  itemName     String              @unique
  itemIcon     String?
  itemType     String?
  description  String?
  minecraftId  String?             @unique
  category     String?
  stackSize    Int?
  lastSyncedAt DateTime?
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  milestones   MilestoneResource[]

  @@index([itemType, itemName])
  @@index([category])
}

model MilestoneResource {
  milestone       Milestone    @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
  milestoneId     Int
  resource        ResourceItem @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  resourceId      Int
  targetQuantity  Int
  currentQuantity Int          @default(0)
  fulfilled       Boolean      @default(false)
  notes           String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@id([milestoneId, resourceId])
  @@index([resourceId])
  @@index([milestoneId, fulfilled])
}
